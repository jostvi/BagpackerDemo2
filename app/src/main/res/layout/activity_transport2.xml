    <ImageView
        android:id="@+id/imgCar"
        android:layout_width="63dp"
        android:layout_height="45dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="true"
        android:clickable="false"
        android:scaleType="fitCenter"
        android:src="@drawable/car"
        app:layout_constraintBottom_toTopOf="@+id/checkCar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionTransport"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imgBike"
        android:layout_width="50dp"
        android:layout_height="39dp"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/bike"
        app:layout_constraintBottom_toTopOf="@+id/checkBike"
        app:layout_constraintTop_toBottomOf="@+id/questionTransport"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="218dp" />

    <CheckBox
        android:id="@+id/checkCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/didact_gothic"
        android:onClick="onCheckboxClicked"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionTransport" />

    <CheckBox
        android:id="@+id/checkTrain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="25dp"
        android:text="@string/train"
        android:textSize="20dp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/didact_gothic"
        android:textStyle="bold"
        android:onClick="onCheckboxClicked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkCar" />

    <CheckBox
        android:id="@+id/checkFlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="25dp"
        android:text="@string/flight"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/didact_gothic"
        android:textStyle="bold"
        android:onClick="onCheckboxClicked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkTrain" />

    <CheckBox
        android:id="@+id/checkBus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="25sp"
        android:text="@string/bus"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/didact_gothic"
        android:textStyle="bold"        android:onClick="onCheckboxClicked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkFlight" />

    <CheckBox
        android:id="@+id/checkBike"
        android:layout_width="94dp"
        android:layout_height="32dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/didact_gothic"
        android:onClick="onCheckboxClicked"
        android:text="@string/bike"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/checkBus"
        app:layout_constraintTop_toBottomOf="@+id/questionTransport" />

    <CheckBox
        android:id="@+id/checkMotorbike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/didact_gothic"
        android:onClick="onCheckboxClicked"
        android:text="@string/motorbike"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/checkTrain"
        app:layout_constraintTop_toBottomOf="@+id/checkBike" />

    <CheckBox
        android:id="@+id/checkBoat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="25dp"
        android:text="@string/boat"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/didact_gothic"
        android:textStyle="bold"
        android:onClick="onCheckboxClicked"
        app:layout_constraintStart_toEndOf="@+id/checkFlight"
        app:layout_constraintTop_toBottomOf="@+id/checkMotorbike" />

    <CheckBox
        android:id="@+id/checkOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="24dp"
        android:onClick="onCheckboxClicked"
        android:text="@string/other"
        android:textColor="@color/colorPink"
        android:fontFamily="@font/didact_gothic"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/checkBus"
        app:layout_constraintTop_toBottomOf="@+id/checkBoat" />


    <TextView
        android:id="@+id/messageToUser"
        android:layout_width="396dp"
        android:layout_height="46dp"
        android:layout_margin="10dp"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="440dp" />

</android.support.constraint.ConstraintLayout>