<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/scanningar_16_9"
    android:scaleType="fitCenter"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/getListBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:onClick="getListFromServer"
        android:text="HÃ¤mta lista"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/new_trip"
        app:layout_constraintStart_toStartOf="@id/new_trip"
        app:layout_constraintTop_toBottomOf="@id/new_trip"


        app:layout_constraintVertical_bias="0.841" />

    <Button
        android:id="@+id/new_trip"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="232dp"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/colorYellow"
        android:fontFamily="@font/didact_gothic"
        android:onClick="createTrip"
        android:scaleType="fitCenter"
        android:text="@string/createTrip"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:textColor="@color/colorPink"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/logotyp_bild"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/logotyp_bild"
        app:layout_constraintTop_toBottomOf="@id/logotyp_bild"
        app:layout_constraintVertical_bias="0.034" />


    <Button
        android:id="@+id/show_saved"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="232dp"
        android:layout_height="63dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/colorYellow"
        android:fontFamily="@font/didact_gothic"
        android:onClick="showSavedLists"
        android:scaleType="fitCenter"
        android:text="@string/myList"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@color/colorPink"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/new_trip"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/new_trip"
        app:layout_constraintTop_toBottomOf="@+id/new_trip"
        app:layout_constraintVertical_bias="0.0" />


    <ImageView
        android:id="@+id/logotyp_text"
        android:layout_width="289dp"
        android:layout_height="101dp"
        android:adjustViewBounds="true"
        android:clickable="false"
        android:scaleType="fitCenter"
        android:src="@drawable/logotyp_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.166" />


    <ImageView
        android:id="@+id/logotyp_bild"
        android:layout_width="154dp"
        android:layout_height="133dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:clickable="false"
        android:scaleType="fitCenter"
        android:src="@drawable/logotyp_bild"
        app:layout_constraintEnd_toEndOf="@+id/logotyp_text"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/logotyp_text"
        app:layout_constraintTop_toBottomOf="@+id/logotyp_text" />


    <Button
        android:id="@+id/btnLogIn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/textLogin"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/show_saved"
        app:layout_constraintVertical_bias="0.099" />

    <Button
        android:id="@+id/btnCreateAccount"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Skapa konto"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLogIn"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/password_input"
        android:layout_width="232dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorInputField"
        android:hint="@string/hintPackingList"
        android:imeOptions="actionSearch"
        android:inputType="numberSigned"
        android:scaleType="fitCenter"
        android:textColor="@color/colorPink"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/show_saved"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/show_saved"
        app:layout_constraintTop_toBottomOf="@+id/show_saved" />


</android.support.constraint.ConstraintLayout>