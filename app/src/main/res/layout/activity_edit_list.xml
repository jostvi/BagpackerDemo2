<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenBackground"
    android:orientation="vertical"
    tools:context=".EditableListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/listTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_toStartOf="@+id/infoButton"
                android:background="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:textColor="@color/cardview_light_background"
                android:textSize="32sp" />

            <ImageButton
                android:id="@+id/infoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:onClick="showPopupInfo"
                android:src="@android:drawable/ic_dialog_info"
                android:background="@color/colorPrimaryDark"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etNewItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/btnSaveList"
                android:hint="Lägg till föremål"
                android:inputType="textPersonName"
                android:imeOptions="actionDone"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="24sp"/>

            <!--<ImageButton
                android:id="@+id/btnAddItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:onClick="addButtonClicked"
                android:src="@android:drawable/ic_input_add"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/etNewItem"/>-->

            <ImageButton
                android:id="@+id/btnSaveList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/colorPrimaryDark"
                android:src="@android:drawable/ic_menu_save"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <Spinner
            android:id="@+id/spChooseCategory"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:background="@color/cardview_light_background" />

    </LinearLayout>


    <ExpandableListView
        android:id="@+id/expListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorYellow" />

</LinearLayout>